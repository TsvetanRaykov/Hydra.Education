<Fields>
    <Validations Mode="ValidationMode.Auto" Model="_passwords" @ref="@_passwordValidators">
        <Validation>
            <Field>
                <FieldLabel>Password</FieldLabel>
                <TextEdit Placeholder="Enter password..." Role="@TextRole.Password" @bind-Text="@_passwords.Password">
                    <Feedback>
                        <ValidationError />
                    </Feedback>
                </TextEdit>
            </Field>
        </Validation>
        <Validation>
            <Field>
                <FieldLabel>Confirm Password</FieldLabel>
                <TextEdit Placeholder="Confirm password..." Role="@TextRole.Password" @bind-Text="@_passwords.ConfirmPassword">
                    <Feedback>
                        <ValidationError />
                    </Feedback>
                </TextEdit>
            </Field>
        </Validation>
    </Validations>
</Fields>

@code {
    private Passwords _passwords = new();
    private Validations _passwordValidators;

    public string Password => _passwords.Password;

    public bool Validate()
    {
        return _passwordValidators.ValidateAll();
    }

    public void Clear()
    {
        _passwords.Clear();
        _passwordValidators.ClearAll();
    }
}